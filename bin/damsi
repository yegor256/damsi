STDOUT.sync = true

require 'slop'
require 'loog'
require 'backtrace'
require_relative '../lib/damsi/version'
require_relative '../lib/damsi/dfg'

loog = Loog::REGULAR

def config(path)
  f = File.expand_path(path)
  args = []
  args += File.readlines(f).map(&:strip).reject { |a| a.empty? } if File.exist?(f)
  args
end

args = config('~/.damsi') + config('.damsi') + ARGV

opts = Slop.parse(args, strict: true, help: true) do |o|
  o.banner = "Usage (#{Damsi::VERSION}): damsi [options]"
  o.bool '-h', '--help', 'Show these instructions'
  o.bool '--version', 'Show current version'
  o.bool '--verbose', 'Print as much log messages as possible'
end

if opts.help?
  puts opts
  exit
end

if opts.verbose?
  loog = Loog::VERBOSE
end

if opts.version?
  loog.info(Damsi::VERSION)
  exit
end

Encoding.default_external = Encoding::UTF_8
Encoding.default_internal = Encoding::UTF_8

begin
  Damsi::DFG.new('').simulate(loog)
rescue StandardError => e
  loog.error(Backtrace.new(e))
  exit -1
end

